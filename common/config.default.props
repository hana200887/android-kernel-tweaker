# AKTune preset: Aggressive ON / Strict OFF
# Path: /data/adb/aktune/config.props

# Daemon cadence / anti-thrash
daemon.interval_sec=6
daemon.debounce_ms=1200
daemon.boost_ms=2600

# Short interactive boost (top-app uclamp.min)
uclamp.top.min.interactive=160
uclamp.top.min.boost=256

# Schedutil ramp limits (microseconds)
# ON = fast ramp-up + not-too-fast ramp-down (keeps UI smooth)
cpu.schedutil.on.little.up=6000
cpu.schedutil.on.little.down=25000
cpu.schedutil.on.big.up=1500
cpu.schedutil.on.big.down=18000
cpu.schedutil.on.prime.up=800
cpu.schedutil.on.prime.down=15000

# OFF = slow ramp-up + faster ramp-down (battery strict)
cpu.schedutil.off.little.up=60000
cpu.schedutil.off.little.down=20000
cpu.schedutil.off.big.up=90000
cpu.schedutil.off.big.down=25000
cpu.schedutil.off.prime.up=120000
cpu.schedutil.off.prime.down=30000

# IO policy
io.read_ahead_kb.on=512
io.read_ahead_kb.off=128
io.nr_requests.on=256
io.nr_requests.off=64
io.nomerges.on=2
io.nomerges.off=0

# IO flags
io.iostats.disable=1
io.rq_affinity.enable=1
io.rq_affinity.value=2

# Network
net.tcp_low_latency.enable=1
net.tcp_timestamps.disable=0

# Touch boost (if supported by kernel nodes)
touchboost.ms=200

# GPU minimum freq floor (% of max)
gpu.min_freq_pct.on=55
gpu.min_freq_pct.off=0
